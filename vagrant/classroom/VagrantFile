#!/usr/bin/env ruby

Vagrant::Config.run do |config|
  config.vm.define :trainingwheels_classroom do |tw_config|
    tw_config.vm.box         = "precise64"
    tw_config.vm.box_url     = "http://files.vagrantup.com/precise64.box"
    tw_config.vm.host_name   = "class.training.wheels"

    tw_config.vm.customize ["modifyvm", :id, "--memory", "256"]
    tw_config.vm.customize ["modifyvm", :id, "--cpus", "1"]

    # If you change this IP address, also change it in dev-setup-playbook.yml
    config.vm.network :hostonly, "10.1.0.3"

    # Shared folders through NFS. This is supported in Mac and Linux. Windows may have
    # issues, see Vagrant site for documentation.
    # We share the trainingwheels folder so that we can get at the keypairs folder,
    # which is generated by the controller setup. This is so that we can copy the
    # public key into the vagrant user's .ssh in our provisioning step. We specifically
    # don't mount at /var as we want to keep the classroom server 'unaware' of the Training
    # Wheels source.
    # Tricksy hobbit.
    config.vm.share_folder("twdir", "/home/vagrant/trainingwheels", "../../", :nfs => true)

    # Port forwarding doesn't work with Cloud9 IDE (node.js server) if the port number is
    # changed (which we need to do if we also run a course on the controller), so add an
    # entry for the IP address (see above) in your /etc/hosts, rather than '127.0.0.1'

    tw_config.vm.provision :shell, :path => "provision/classroom-setup.sh"

    # Load a local setup file if it exists, so you can use it to
    # provide additional provisioning steps.
    if File.exist?(File.join(File.dirname(__FILE__), "setup.local.sh"))
      tw_config.vm.provision :shell, :path => "setup.local.sh"
    end
  end
end
