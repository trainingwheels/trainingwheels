ServerName {{ apache_servername }}
<VirtualHost *:80>
	ServerAdmin {{ apache_server_admin }}
	ServerAlias {{ apache_server_alias }}

	VirtualDocumentRoot {{ apache_virtual_docroot }}

	<Directory {{ apache_directory }}>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

</VirtualHost>
